<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.ncku.designexpo" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>2017台灣設計展</name>
    <description>
        2017台灣設計展好棒！
    </description>
    <author email="F74036108@mail.ncku.edu.tw" href="https://github.com/winone520/Taiwan-Design-Exhibition-2017">
        NCKU CHAMPION TEAM
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <splash src="splash.png" />
    <preference name="Fullscreen" value="true" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
</widget>
